<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottleNex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/system_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/system_background</item>
        <item name="colorSurface">@color/secondary_system_background</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.BottleNex.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.BottleNex.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.BottleNex.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.BottleNex.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.BottleNex.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.BottleNex.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.BottleNex.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.BottleNex.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BottleNex.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BottleNex.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.BottleNex.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.BottleNex.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.BottleNex.Overline</item>
    </style>

    <!-- Modern Apple-style typography -->
    <style name="TextAppearance.BottleNex.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottleNex.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottleNex.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottleNex.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottleNex.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottleNex.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottleNex.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.BottleNex.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/system_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.BottleNex.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.BottleNex.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/system_gray2</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.BottleNex.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottleNex.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/system_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.BottleNex.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/system_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Custom outlined button style with blue border -->
    <style name="Widget.BottleNex.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/blue_500</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>