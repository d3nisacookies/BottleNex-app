<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header with Back Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvPaymentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment History"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your complete payment records"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_below="@id/tvPaymentTitle" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_back_curved"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back button" />
    </RelativeLayout>

    <!-- Record Count -->
    <TextView
        android:id="@+id/tvRecordCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(0 records)"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#666666"
        android:background="#FFFFFF"
        android:padding="8dp" />

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView for payment list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPayments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- No payments message -->
        <TextView
            android:id="@+id/tvNoPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No payment history found"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout> 