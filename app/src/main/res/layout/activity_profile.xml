<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header with Back Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textAppearance="@style/TextAppearance.BottleNex.Headline2"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_back_curved"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back button" />
            </RelativeLayout>

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Info"
                android:textAppearance="@style/TextAppearance.BottleNex.Headline4"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.BottleNex.Body1"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvBod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BOD"
                android:textAppearance="@style/TextAppearance.BottleNex.Body1"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textAppearance="@style/TextAppearance.BottleNex.Body1"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvPostcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postcode"
                android:textAppearance="@style/TextAppearance.BottleNex.Body1"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"/>

            <!-- Edit Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:text="Edit Profile"
                android:textAppearance="@style/TextAppearance.BottleNex.Button"
                android:background="@drawable/modern_button_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/system_gray5"
                android:layout_marginVertical="24dp"/>

            <!-- Subscription Plans Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscription Plans &amp; Pricings"
                android:textAppearance="@style/TextAppearance.BottleNex.Headline3"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"/>

            <!-- Monthly Plan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/modern_card_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvPlanName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Monthly"
                        android:textAppearance="@style/TextAppearance.BottleNex.Headline5"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPlanPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5"
                        android:textAppearance="@style/TextAppearance.BottleNex.Headline5"
                        android:textColor="@color/green_500"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvBillingPeriod1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/mo"
                        android:textAppearance="@style/TextAppearance.BottleNex.Body2"
                        android:textColor="@color/system_gray" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Basic navigation features\n• Limited route previews\n• Standard support"
                    android:textAppearance="@style/TextAppearance.BottleNex.Body2"
                    android:textColor="@color/system_gray"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubscribe1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Subscribe"
                    android:textAppearance="@style/TextAppearance.BottleNex.Button" />
            </LinearLayout>

            <!-- Annual Plan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/modern_card_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvPlanName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Annual"
                        android:textAppearance="@style/TextAppearance.BottleNex.Headline5"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPlanPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$47"
                        android:textAppearance="@style/TextAppearance.BottleNex.Headline5"
                        android:textColor="@color/green_500"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvBillingPeriod2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/per year"
                        android:textAppearance="@style/TextAppearance.BottleNex.Body2"
                        android:textColor="@color/system_gray" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Real time traffic data\n• Route optimization\n• Priority support\n• Save 20% compared to monthly"
                    android:textAppearance="@style/TextAppearance.BottleNex.Body2"
                    android:textColor="@color/system_gray"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubscribe2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Subscribe"
                    android:textAppearance="@style/TextAppearance.BottleNex.Button" />
            </LinearLayout>

            <!-- Semi-annual Plan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/modern_card_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvPlanName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Semi-annual"
                        android:textAppearance="@style/TextAppearance.BottleNex.Headline5"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPlanPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$27"
                        android:textAppearance="@style/TextAppearance.BottleNex.Headline5"
                        android:textColor="@color/green_500"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvBillingPeriod3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/6 month"
                        android:textAppearance="@style/TextAppearance.BottleNex.Body2"
                        android:textColor="@color/system_gray" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• All monthly features\n• Discounted rate\n• Early access to new tools\n• Save 10% compared to monthly"
                    android:textAppearance="@style/TextAppearance.BottleNex.Body2"
                    android:textColor="@color/system_gray"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubscribe3"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Subscribe"
                    android:textAppearance="@style/TextAppearance.BottleNex.Button" />
            </LinearLayout>

            <!-- Payment Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPaymentDetails"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="View Payment Details"
                android:textAppearance="@style/TextAppearance.BottleNex.Button"
                android:background="@drawable/modern_button_secondary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Logout"
                android:textAppearance="@style/TextAppearance.BottleNex.Button"
                android:background="@drawable/modern_button_secondary"
                android:textColor="@color/red" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>