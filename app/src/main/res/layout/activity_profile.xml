<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header with Back Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_back_curved"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back button" />
            </RelativeLayout>

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Info"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvBod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BOD"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvPostcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postcode"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Divider -->

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:minHeight="40dp"
                android:padding="12dp"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp"/>

            <!-- Subscription Plans Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscription Plans &amp; Pricings"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Monthly Plan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvPlanName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Monthly"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvPlanPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvBillingPeriod1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/mo"
                        android:textSize="16sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Basic navigation features\n• Limited route previews\n• Standard support"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnSubscribe1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Annual Plan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvPlanName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Annual"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvPlanPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$47"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvBillingPeriod2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/per year"
                        android:textSize="16sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Real time traffic data\n• Route optimization\n• Priority support\n• Save 20% compared to monthly"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnSubscribe2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Semi-annual Plan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvPlanName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Semi-annual"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvPlanPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$27"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvBillingPeriod3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/6 month"
                        android:textSize="16sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• All monthly features\n• Discounted rate\n• Early access to new tools\n• Save 10% compared to monthly"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnSubscribe3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Payment Details Button -->
            <Button
                android:id="@+id/btnPaymentDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Payment Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#FF9800"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Logout Button -->
            <TextView
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#F44336"
                android:gravity="center"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>