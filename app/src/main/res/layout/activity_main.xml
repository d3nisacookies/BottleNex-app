<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/system_background"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="@string/app_name"
            app:titleTextColor="@color/black"
            app:titleTextAppearance="@style/TextAppearance.BottleNex.Headline6" />

        <!-- Modern Search Bar with subtle styling -->
        <FrameLayout
            android:id="@+id/searchBarContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/search_background"
            android:layout_gravity="bottom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="1dp">

            <!-- Left Search Icon Button -->

            <!-- SEARCH VIEW replacing old TextView -->
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="237dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:iconifiedByDefault="false"
                android:paddingStart="5dp"
                android:paddingEnd="44dp"
                android:queryHint="Search location" />

            <!-- Right Mic Icon Button -->
            <ImageButton
                android:id="@+id/btnSearchRight"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voice Icon"
                android:src="@drawable/profile"
                android:layout_gravity="end|center_vertical"
                android:padding="6dp" />

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="50dp"
                android:padding="6dp"
                android:src="@drawable/favourite"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add to Favorite"/>
            <ImageButton
                android:id="@+id/btnStarred"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="90dp"
                android:padding="6dp"
                android:src="@drawable/star"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add to Starred Places"/>
        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Search Suggestions ListView - positioned over map view -->
    <ListView
        android:id="@+id/suggestionListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:visibility="gone"
        android:elevation="8dp"
        android:maxHeight="200dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Modern Map Controls with card styling -->
    <LinearLayout
        android:id="@+id/mapControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Zoom In"
            android:src="@drawable/ic_add_24" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Zoom Out"
            android:src="@drawable/ic_remove_24" />

        <ImageButton
            android:id="@+id/btnMyLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="My Location"
            android:src="@android:drawable/ic_menu_mylocation" />
    </LinearLayout>

    <!-- Modern Bottom Panel with card styling -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/modern_card_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Navigation instruction banner (hidden by default) -->
        <TextView
            android:id="@+id/navigationInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Head northwest on South Buona Vista Road â€¢ 1.3 km"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/blue_500"
            android:padding="6dp"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/locationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap on map to get location"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.BottleNex.Body1"
            android:textColor="@color/black"
            android:lineSpacingExtra="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNavigate"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Navigate"
                android:textAppearance="@style/TextAppearance.BottleNex.Button"
                android:enabled="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelRoute"
                style="@style/Widget.BottleNex.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAppearance="@style/TextAppearance.BottleNex.Button"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Traffic Prediction Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/trafficButtonsLayout">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrafficOverlay"
                style="@style/Widget.BottleNex.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:text="Predict Traffic"
                android:textSize="11sp"
                android:minHeight="36dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRouteTraffic"
                style="@style/Widget.BottleNex.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:text="Traffic Analysis"
                android:textSize="11sp"
                android:minHeight="36dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlternativeRoute"
                style="@style/Widget.BottleNex.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:text="Alt Route"
                android:textSize="11sp"
                android:minHeight="36dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Compact Alt Route Chooser Row (side-by-side buttons) -->
        <LinearLayout
            android:id="@+id/altRouteChooserRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChooseMainRoute"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:text="Main â€¢ 0.0 km â€¢ 0 min"
                android:textSize="11sp"
                android:minHeight="36dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                app:backgroundTint="@color/blue_500"
                android:textColor="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChooseAltRoute"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:text="Alt â€¢ 0.0 km â€¢ 0 min"
                android:textSize="11sp"
                android:minHeight="36dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                app:backgroundTint="@color/blue_500"
                android:textColor="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmRoute"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:text="Confirm"
                android:textSize="11sp"
                android:minHeight="36dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                app:backgroundTint="@color/green_500"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Modern bottom navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/modern_card_background"
            android:elevation="2dp"
            android:padding="6dp">

            <ImageButton
                android:id="@+id/btnNavigation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/gps"
                android:contentDescription="Home"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnBookmark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bookmark"
                android:contentDescription="Search"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnCar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:contentDescription="Profile"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnPersonalTools"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/dehaze"
                android:contentDescription="Personal Tools"
                android:background="@android:color/transparent" />



        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJourney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Navigation"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvJourneyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.BottleNex.Headline6"
        android:textColor="@color/green_500"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnJourney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Overlay card that temporarily replaces the bottom panel controls
         to let users compare/select routes. Hidden by default. -->
    <LinearLayout
        android:id="@+id/altRouteOverlayCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/modern_card_background"
        android:padding="14dp"
        android:layout_margin="12dp"
        android:elevation="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/altOverlayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alternative Routes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/overlayMainInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Route â€¢ 0.0 km â€¢ 0 min"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOverlayUseMain"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Main Route"
            android:textSize="14sp"
            app:backgroundTint="@color/blue_500"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/overlayAltInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alternative Route â€¢ 0.0 km â€¢ 0 min"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOverlayUseAlt"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Alternative Route"
            android:textSize="14sp"
            app:backgroundTint="@color/blue_500"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOverlayConfirm"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="14sp"
            app:backgroundTint="@color/green_500"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOverlayClose"
            style="@style/Widget.BottleNex.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
