<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_background"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Tools"
        android:textAppearance="@style/TextAppearance.BottleNex.Headline2"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOfflineMaps"
        android:layout_width="0dp"

        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="Offline Maps"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="72dp" />

    <!-- Button 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRouteHistory"
        android:layout_width="0dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Route History"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnOfflineMaps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="72dp" />

    <!-- Button 3 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFeedback"
        android:layout_width="0dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Feedback"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnRouteHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="72dp" />

    <!-- Button 4 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReportBug"
        android:layout_width="0dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Report Bug"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnFeedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="72dp" />

    <!-- Button 5 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAlertSettings"
        android:layout_width="0dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Alert Settings"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnReportBug"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="72dp" />

    <!-- Button 6 - Historical Traffic Data -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistoricalTrafficData"
        android:layout_width="0dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Historical Traffic Data"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnAlertSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="72dp" />

    <!-- Bottom spacer to push navigation bar to bottom -->
    <View
        android:id="@+id/bottomSpacer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/btnHistoricalTrafficData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnNavigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/gps"
            android:contentDescription="Home"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/bookmark"
            android:contentDescription="Search"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btnCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/car"
            android:contentDescription="Profile"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btnPersonalTools"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/dehaze"
            android:contentDescription="Personal Tools"
            android:background="@android:color/transparent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
