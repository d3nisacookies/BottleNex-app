<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_background"
    android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Tools"
        android:textAppearance="@style/TextAppearance.BottleNex.Headline2"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOfflineMaps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="Offline Maps"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Button 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRouteHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Route History"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnOfflineMaps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Button 3 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFeedback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Feedback"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnRouteHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Button 4 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReportBug"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Report Bug"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnFeedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Button 5 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAlertSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Alert Settings"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnReportBug"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

</androidx.constraintlayout.widget.ConstraintLayout>
