<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popular_plan_border"
    android:padding="16dp"
    android:layout_margin="8dp">

    <!-- Popular Badge -->
    <TextView
        android:id="@+id/tvPopularBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOST POPULAR"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:background="#FFF3E0"
        android:padding="4dp"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <!-- Plan Title -->
    <TextView
        android:id="@+id/tvPlanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annual Plan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="4dp" />

    <!-- Plan Description -->
    <TextView
        android:id="@+id/tvPlanDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best value for long-term users"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="12dp" />

    <!-- Price and Billing Period -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvPlanPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$47"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/tvBillingPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/per year"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Plan Features -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFeature1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Real time traffic data"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvFeature2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Route optimization"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvFeature3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Priority support"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvFeature4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Save 20% compared to monthly"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

</LinearLayout> 