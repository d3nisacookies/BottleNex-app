<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/system_background"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Pre-Route Prediction"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_back_curved"
            app:titleTextAppearance="@style/TextAppearance.BottleNex.Headline6" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Location Input Section -->
    <LinearLayout
        android:id="@+id/locationInputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/modern_card_background"
        android:layout_margin="12dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Predictions For Route"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Start Location Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/etStartLocation"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Enter start location"
                android:background="@drawable/modern_input_background"
                android:padding="12dp"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionNext" />

        </LinearLayout>

        <!-- Destination Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/etDestination"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Enter destination"
                android:background="@drawable/modern_input_background"
                android:padding="12dp"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionDone" />

        </LinearLayout>

        <!-- Plan Route Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlanRoute"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Get Predictions"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue_500"
            app:cornerRadius="8dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/locationInputSection"
        app:layout_constraintBottom_toTopOf="@id/routeInfoSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Route Info and Traffic Controls Section -->
    <LinearLayout
        android:id="@+id/routeInfoSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/modern_card_background"
        android:layout_margin="12dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Route Summary -->
        <TextView
            android:id="@+id/tvRouteInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Route information will appear here"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Traffic Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrafficOverlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Predict Traffic"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue_500"
                app:cornerRadius="8dp"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrafficAnalysis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Traffic Analysis"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue_500"
                app:cornerRadius="8dp"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
