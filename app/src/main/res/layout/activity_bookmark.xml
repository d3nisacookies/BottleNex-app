<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_background"
    android:padding="16dp">

    <!-- Top spacer: about 10% height -->
    <View
        android:id="@+id/topSpacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.10" />

    <!-- Heading aligned to the left -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bookmark"
        android:textAppearance="@style/TextAppearance.BottleNex.Headline2"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/topSpacer"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStarredPlaces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="Starred Places"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Button 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSavedTrips"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Saved Trips"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnStarredPlaces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Button 3 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToGoPlaces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="To Go Places"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnSavedTrips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Button 4 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFavourites"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Favorites"
        android:textAppearance="@style/TextAppearance.BottleNex.Button"
        android:background="@drawable/modern_card_background"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnToGoPlaces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Bottom spacer to fill remaining space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnFavourites"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
